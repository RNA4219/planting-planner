{
  "name": "planting-planner-frontend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run typecheck && vite build",
    "preview": "vite preview",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint --config .eslintrc.json src --ext .ts,.tsx,.js,.jsx",
    "test": "vitest run",
    "test:file": "vitest run --passWithNoTests",
    "test:e2e": "npm run build && npx playwright test playwright/app.spec.js tests/e2e/market-toggle.spec.ts tests/e2e/checkout-flow.spec.ts",
    "test:lighthouse": "npm run build && lighthouse http://localhost:4173 --chrome-flags=--headless"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "autoprefixer": "^10.4.20",
    "jsdom": "^24.1.3",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.3",
    "lighthouse": "^12.1.0",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.4",
    "vite": "^5.4.2",
    "vitest": "^2.1.1"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.59.16",
    "@tanstack/react-query-devtools": "^5.59.16",
    "chart.js": "^4.4.3",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.3.1",
    "zustand": "^4.5.4"
  }
}
